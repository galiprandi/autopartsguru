generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String          @id @default(cuid())
  alias         String?
  email         String          @unique
  picture       String?
  enabled       Boolean         @default(true)
  role          UserRole        @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
enum UserRole {
  USER
  ADMIN
}